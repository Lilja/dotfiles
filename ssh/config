
# Bastion host
Host jump-rkllj-io
    Hostname jump.rkllj.io
    Port 7302
    User jump

# Proxmox node
Host yoda
    Hostname yoda.lan
    User root
    PreferredAuthentications password
    PubkeyAuthentication no
    ProxyJump jump-rkllj-io

Host yoda-gui
    Hostname yoda.lan
    User root
    PreferredAuthentications password
    PubkeyAuthentication no
    LocalForward 8006 localhost:8006
    ProxyJump jump-rkllj-io
    LocalCommand /bin/sh -c "open https://localhost:8006"
    RequestTTY no

# Nas
Host solo
    Hostname solo.lan
    User Han
    PreferredAuthentications publickey
    PubkeyAuthentication no
    ProxyJump jump-rkllj-io

# NAS gui
Host solo-gui
    Hostname jump.rkllj.io
    Port 7302
    User jump
    LocalForward 5000 solo.lan:5000
    LocalCommand /bin/sh -c "open http://localhost:5000"
    RequestTTY no


# Nas through ssh to sftp
Host han-solo-sftp
    Hostname solo.lan
    Port 2222
    User han
    ProxyJump jump-rkllj-io

Host devnode
    Hostname 192.168.0.27
    User lilja
    Port 22
    ProxyJump jump-rkllj-io

# Home router gui
Host router-gui
    Hostname jump.rkllj.io
    RequestTTY no
    User jump
    Port 7302
    LocalForward 8080 192.168.0.1:80

# Yoda / Proxmox VMs
Host devnode
    Hostname 192.168.0.27
    User lilja
    Port 22
    ProxyJump jump-rkllj-io

Host kenobi
    Hostname kenobi.lan
    User pi
    ProxyJump jump-rkllj-io

Host main-vnc-forward
    Hostname jump.rkllj.io
    RequestTTY no
    Port 7302
    User jump
    LocalForward 5902 192.168.0.5:5902

# Off-site pi
Host organa
    Hostname rkllj.io
    LogLevel debug
    Port 7304
    User pi

Host grafana-gui
    Hostname jump.rkllj.io
    RequestTTY no
    User jump
    Port 7302
    LocalForward 8443 192.168.0.27:80
    LocalCommand /bin/sh -c "open https://grafana.home:8443"

Host frps-metrics-gui
    Hostname 192.168.0.235
    User root
    ProxyJump jump-rkllj-io
    LocalForward 9117 localhost:9117
    LocalForward 8096 localhost:8096
    LocalForward 8443 192.168.0.27:80
    LocalCommand /bin/sh -c "open https://frps-metrics.home:8443"
