    unmap <leader>nt
    " next diff
    map <leader>n :ConflictMarkerNextHunk<CR>
    " prev diff
    map <leader>b :ConflictMarkerPrevHunk<CR>

    unmap <leader>r
    map <nowait><leader>r :diffget REMOTE<CR>
    map <nowait><leader>l :diffget LOCAL<CR>
endif

